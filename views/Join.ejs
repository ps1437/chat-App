<body>
<div class="container">

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Group Chat</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item active">
              <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
            </li>
            
            <li class="nav-item">
              <a class="nav-link" href="#">about</a>
            </li>
         
          </ul>
        </div>
      </nav>
    <div class="global-container">
        <div class="card login-form">
        <div class="card-body">
            <h3 class="card-title text-center">Join to Group Chat</h3>
            <div class="card-text">
                    <form action="/join" method="POST">
                  
                  
                    <div class="form-group"  id="roomIdWrapper">
                        <label for="exampleInputEmail1">Room Id</label>
                        <input type="text" class="form-control form-control-sm"
                        required
                        name="roomId"
                         id="roomId" aria-describedby="roomId">
                    </div>
                  
                    <button type="submit" 
                  
                    id ="join"
                    class="btn btn-primary btn-block">Join</button>
                    
                  
                   
                </form>

                </div>
        </div>
    </div>
    </div>
    
<div class="row">
    <% Object.keys(rooms).forEach(room =>{ %>
        <div class="card m-1" style="width: 15rem;">
            <img class="card-img-top"  style=" height: 10rem;"
            src="http://placehold.it/50/50C1E7/fff&text=<%= room.charAt(0) %>" 
            title="<%= room %>"
            alt="<%= room %>">
            <div class="card-body text-center">
                <a href="/<%= room %>" class="btn btn-primary btn-block">Join </a>
            </div>
          </div>
       
<%}) %></div>
</div>  


  
  
